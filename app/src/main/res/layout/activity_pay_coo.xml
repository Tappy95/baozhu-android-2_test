<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/head_text_title" />

    <View style="@style/user_data_line" />

    <FrameLayout
        android:id="@+id/fl_select_paytype"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:drawableRight="@drawable/icon_data_more"
            android:paddingRight="2dp"
            android:text="支付类型" />

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="40dp"
            android:text=""
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="16dp"
            android:layout_height="16dp"
             android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:text="类型" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:text="开通期限" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:text="购买价格" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f5f8">

        <Button
            android:id="@+id/bt_apply"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_bg_change_button"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/head_text_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:text="手机号"
        android:textColor="@color/color_3c3e5b"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="27dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_3C3E59"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/iv_lin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_phone"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_line" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="验证码"
        android:textColor="@color/color_3c3e5b"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="27dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="230dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="8"
            android:text=""
            android:textColor="@color/color_3C3E59"
            android:textSize="15sp" />

        <com.micang.baselibrary.view.countdown.CountDownTimerButton
            android:id="@+id/get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@null"
            android:text="获取验证码"
            android:textColor="@color/FF2555"
            android:textSize="14sp"
            app:countDown="60000"
            app:countDownFormat="%ds"
            app:countDownInterval="1000" />

        <ImageView
            android:id="@+id/iv_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/et_code"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_line" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:text="设置新密码"
        android:textColor="@color/color_3c3e5b"
        android:textSize="11sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="27dp">

        <EditText
            android:id="@+id/et_psw"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="18"
            android:text=""
            android:textColor="@color/color_3C3E59"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_show_psw"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_not_show" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/et_psw"
            android:layout_marginTop="16dp"
            android:background="@drawable/icon_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="15dp">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_bg_radius_24_ff1370"
            android:text="确定"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>

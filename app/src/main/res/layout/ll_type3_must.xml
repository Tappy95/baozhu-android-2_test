<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_8_color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/ff2b49"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_step_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="9dp"
            android:maxLines="8"
            android:text=""
            android:textColor="@color/color_3c3e59"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="104dp"
            android:layout_height="185dp"
            android:layout_marginLeft="64dp"
            android:background="@drawable/bg_radius_4_color_f3f5f8" />

        <ImageView
            android:id="@+id/iv_must_pic"
            android:layout_width="139dp"
            android:layout_height="48dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="61dp"
            android:background="@drawable/icon_need_state"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>
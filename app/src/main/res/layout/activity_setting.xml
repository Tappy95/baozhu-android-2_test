<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_text_title" />

    <FrameLayout
        android:id="@+id/fl_binding_weixin"
        style="@style/user_data_frameLayout"
        android:layout_marginTop="8dp">

        <TextView
            style="@style/user_data_textview"
            android:drawableRight="@drawable/icon_data_more"
            android:text="微信" />

        <TextView
            android:id="@+id/tv_weixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/color_3c3e5b"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_binding_phone"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:text="手机号" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/color_3c3e5b"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_binding_zhifubao"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:drawableRight="@drawable/icon_data_more"
            android:text="支付宝" />

        <TextView
            android:id="@+id/tv_zhifubao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/color_3c3e5b"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_change_psw"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:drawableRight="@drawable/icon_data_more"
            android:text="修改密码" />


        <View style="@style/user_data_line" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_paypsw"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:drawableRight="@drawable/icon_data_more"
            android:text="设置支付密码" />


        <View style="@style/user_data_line" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fl_versions"
        style="@style/user_data_frameLayout"
        android:layout_marginTop="8dp">

        <TextView
            style="@style/user_data_textview"
            android:text="当前版本" />

        <TextView
            android:id="@+id/tv_versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="15dp"
            android:text="V1.0"
            android:textColor="@color/color_3C3E59"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/pic_logout"
        android:textColor="@color/color_f3f5f8"
        android:textSize="15sp" />

</LinearLayout>
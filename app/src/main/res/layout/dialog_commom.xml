<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_white_radius8">

    <TextView
        android:id="@+id/content"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="您要退出登录吗？"
        android:textColor="@color/color_333333"
        android:textSize="16sp" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/content"
        android:background="@color/color_f3f5f8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/v_line"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/shape_bg_bottomleft_radius8"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_f3f5f8" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/shape_bg_bottomright_radius8"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_3c3e5b"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/head_text_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/FFEAF0F7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@color/color_ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">
<!--cuijianqiang.2020/8/25-->
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_launcher_new"/>
        <!--            android:src="@mipmap/ic_launcher"-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="一亿人都想玩的赚钱APP"
            android:textColor="@color/FF3C3E59"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f3f5f8"></LinearLayout>

    <FrameLayout
        android:id="@+id/fl_change_name"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:text="客服QQ" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"

            android:text="1501305376"
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

        <View style="@style/user_data_line" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_change_birthday"
        style="@style/user_data_frameLayout">

        <TextView
            style="@style/user_data_textview"

            android:text="商务合作" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"

            android:text="bzlyplay@163.com"
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f5f8"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_Versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text=""
            android:textColor="@color/color_9ea9bc"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>
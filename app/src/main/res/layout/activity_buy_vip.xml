<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/head_text_title" />

    <View style="@style/buyvip_data_line" />

    <FrameLayout
        android:id="@+id/fl_select_paytype"
        style="@style/buyvip_data_frameLayout"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            style="@style/user_data_textview"
            android:drawableRight="@drawable/icon_data_more"
            android:text="支付类型" />

        <TextView
            android:id="@+id/tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="40dp"
            android:text="请选择"
            android:textColor="@color/FFAAB4C4"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="17dp" />

        <View style="@style/buyvip_data_line" />
    </FrameLayout>

    <FrameLayout style="@style/buyvip_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:layout_marginLeft="16dp"
            android:text="VIP类型" />

        <TextView
            android:id="@+id/tv_vip_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColor="@color/FFAAB4C4"
            android:textSize="14sp" />

        <View style="@style/buyvip_data_line" />
    </FrameLayout>

    <FrameLayout style="@style/buyvip_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:layout_marginLeft="16dp"
            android:text="开通期限" />

        <TextView
            android:id="@+id/tv_vip_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColor="@color/FFAAB4C4"
            android:textSize="14sp" />

        <View style="@style/buyvip_data_line" />
    </FrameLayout>

    <FrameLayout style="@style/buyvip_data_frameLayout">

        <TextView
            style="@style/user_data_textview"
            android:layout_marginLeft="16dp"
            android:text="购买价格" />

        <TextView
            android:id="@+id/tv_vip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="16dp"
            android:text=""
            android:textColor="@color/FFAAB4C4"
            android:textSize="14sp" />

        <View style="@style/buyvip_data_line" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f3f5f8"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f5f8"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/fl_select_discount"
            style="@style/user_data_frameLayout">

            <TextView
                style="@style/user_data_textview"
                android:drawableRight="@drawable/icon_data_more"
                android:text="使用折扣券" />

            <TextView
                android:id="@+id/tv_discount_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="8dp"
                android:text=""
                android:textColor="@color/FFAAB4C4"
                android:textSize="14sp" />

            <View style="@style/user_data_line" />
        </FrameLayout>

        <FrameLayout
            style="@style/user_data_frameLayout"
            android:layout_below="@id/fl_select_discount">

            <TextView
                style="@style/user_data_textview"
                android:text="零钱抵扣" />

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="120dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_select_loosechagnge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:text="¥0.00"
                    android:textColor="@color/FFAAB4C4"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/iv_select_loosechagnge"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_loosechange" />
            </LinearLayout>

            <View style="@style/user_data_line" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_bg_change_button"
            android:text="立即开通"
            android:textColor="@color/color_f3f5f8"
            android:textSize="15sp" />
    </RelativeLayout>


</LinearLayout>
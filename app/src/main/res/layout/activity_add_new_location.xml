<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/head_text_text_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f3f5f8"
        android:orientation="vertical">

        <LinearLayout
            style="@style/add_address_linearLayout"
            android:layout_marginTop="8dp">

            <TextView
                style="@style/add_address_txt_tip"
                android:text="收货人" />

            <EditText
                android:id="@+id/et_name"
                style="@style/add_address_edit"
                android:hint="姓名"
                android:maxLines="1"
                android:text="" />


        </LinearLayout>

        <View
            style="@style/add_address_line"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout style="@style/add_address_linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nu"
                    style="@style/add_address_txt_tip"
                    android:text="手机号" />

                <EditText
                    android:id="@+id/et_moblie"
                    style="@style/add_address_edit"
                    android:layout_toRightOf="@id/tv_nu"
                    android:hint="11位手机号"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="11"
                    android:text="" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:text="+86"
                    android:textColor="@color/color_3c3e5b"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/add_address_line"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout style="@style/add_address_linearLayout">

            <TextView
                style="@style/add_address_txt_tip"
                android:text="所在地区" />

            <TextView
                android:id="@+id/tv_area"
                style="@style/user_data_textview"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:drawableRight="@drawable/icon_data_more"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text=""
                android:textColor="@color/color_3c3e5b"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            style="@style/add_address_line"
            android:layout_marginHorizontal="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_ffffff"
            android:orientation="horizontal"
            android:paddingTop="14dp"
            android:paddingBottom="14dp">


            <TextView
                style="@style/add_address_txt_tip"
                android:text="详细地址" />

            <EditText
                android:id="@+id/et_details_ads"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="如街道、小区、楼栋、单元、门牌"
                android:maxLines="4"
                android:text=""
                android:textColor="@color/color_3c3e5b"
                android:textColorHint="@color/color_9ea9bc"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/add_address_linearLayout"
            android:layout_marginTop="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_t"
                    style="@style/add_address_txt_tip"
                    android:text="设置默认地址" />

                <ImageView
                    android:id="@+id/iv_default_ads"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icon_default_ads_press" />

            </RelativeLayout>


        </LinearLayout>

        <!--<LinearLayout-->
            <!--style="@style/add_address_linearLayout"-->
            <!--android:layout_marginTop="8dp">-->

            <!--<TextView-->
                <!--android:id="@+id/tv_delete_ads"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:text="删除收货地址"-->
                <!--android:textColor="@color/color_FF3654" />-->
        <!--</LinearLayout>-->
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/id_iv_tip"
        android:layout_width="49dp"
        android:layout_height="57dp"
        android:layout_marginLeft="91dp"
        android:src="@drawable/pic_left_top" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="182dp"
        android:layout_height="36dp"
        android:layout_below="@id/id_iv_tip"
        android:src="@drawable/pic_two" />


    <ImageView
        android:id="@+id/iv_known"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:layout_below="@id/iv_1"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="19dp"
        android:onClick="clickKnown"
        android:paddingRight="10dp"
        android:src="@drawable/pic_next" />

    <ImageView
        android:id="@+id/iv_2"
        android:layout_width="158dp"
        android:layout_height="10dp"
        android:layout_below="@id/iv_known"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/pic_two_01" />

</RelativeLayout>

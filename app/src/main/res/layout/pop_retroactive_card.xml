<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="232dp"
    android:layout_height="192dp">


    <LinearLayout
        android:layout_width="232dp"
        android:layout_height="166dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_white_radius8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="47dp"
            android:text="恭喜获得一张补签卡"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="赶紧去签到吧"
            android:textColor="@color/color_9ea9bc"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_bg_radius_24_ff1370"
            android:text="好的"
            android:textColor="@color/color_ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_retroactive_card" />


</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="288dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_8_color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_close" />

        <ImageView
            android:id="@+id/tv_1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:background="@drawable/no_banner" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text=""
            android:textColor="#FF3259"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_radius_4_color_f3f5f8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="1、预约成功后自动为您抢到该任务"
                android:textColor="@color/color_9ea9bc"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text="2、请在任务试玩开始后限时有效期内完成当前任务，否则失效"
                android:textColor="@color/color_9ea9bc"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:text="3、预约成功后，多次不完成任务，将被禁止做任务。"
                android:textColor="@color/color_9ea9bc"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="288dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_bottom_radius_8_color_f05a24_ff1370"
            android:gravity="center"
            android:text="立即预约"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
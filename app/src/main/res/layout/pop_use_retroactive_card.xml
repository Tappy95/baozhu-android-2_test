<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="232dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="232dp"
        android:layout_height="166dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_white_radius8"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="47dp"
            android:text="是否使用补签卡"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_bg_radius_24_ff1370"
            android:text="不使用"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_bg_radius_24_ff1370"
            android:text="使用"
            android:textColor="@color/color_ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/icon_retroactive_card" />

    <ImageView
        android:id="@+id/im_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="207dp"
        android:src="@drawable/early_clock_pop_x" />
</FrameLayout>
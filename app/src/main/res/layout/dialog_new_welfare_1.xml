<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:background="@drawable/shape_bg_white_radius8"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="300dp"
        android:layout_height="123dp"
        android:background="@drawable/bg_new_welfare_1" />

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="128dp"
        android:layout_height="84dp"
        android:layout_below="@id/iv_bg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_welfare_1" />

    <TextView
        android:id="@+id/content"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="是否确定离开？如果没有抽取转盘，将不能获取奖励哦～"
        android:textColor="@color/color_9ea9bc"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/shape_bg_bottomleft_radius8_e6e6e6"
            android:gravity="center"
            android:text="继续玩转盘"
            android:textColor="@color/color_3c3e5b"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/shape_bg_bottomright_radius8_ff3e2b"
            android:gravity="center"
            android:text="我转过了哦"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>
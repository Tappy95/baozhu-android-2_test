<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="327dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="327dp"
        android:layout_height="225dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_radius_8_color_ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/tv_cancel"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:src="@drawable/icon_sign_make_task_close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_radius_2_color_63c777"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="支付1w金币参与早起打卡的用户，在次日早晨没有按时打卡，可在当日上午8:30-11：00使用补签券；成功使用补签券视为打卡成功，可随机瓜分奖金池内的奖金"
                    android:textColor="@color/color_9ea9bc"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_radius_2_color_63c777"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="补签券可通过邀请好友方式获得；好友注册成功，并成为您的下级，您可获得一张补签券，每日每天最多获得1张补签券（非邀请达人）；"
                    android:textColor="@color/color_9ea9bc"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="13dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_radius_2_color_63c777"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="每张补签券有限期为一天；"
                    android:textColor="@color/color_9ea9bc"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/bg_radius_2_color_63c777"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/color_ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="好友成为您的下级，系统会自动发放一张补签券到您的账户。"
                    android:textColor="@color/color_9ea9bc"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:layout_width="132dp"
        android:layout_height="28dp"
        android:background="@drawable/icon_earlyrecord_retroactive_rules"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>


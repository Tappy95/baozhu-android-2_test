<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_12_color_ffffff">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/shape_bc_radius_4_fef8e2">

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="11dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="3dp"
            android:text=""
            android:textColor="#EF4B4A"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:layout_below="@id/ll"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_leftdown_radius_12_color_f3f5f8"
            android:gravity="center"
            android:text="好的"
            android:textColor="#414A62"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_rightdown_radius_12_color_ff1370"
            android:gravity="center"
            android:text="不再提示"
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="174dp"
        android:layout_height="24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/icon_dialog_title">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="8"
            android:text=""
            android:textColor="@color/color_ffffff"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>